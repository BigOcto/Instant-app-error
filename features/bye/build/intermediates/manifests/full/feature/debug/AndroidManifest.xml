<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    featureSplit="bye"
    package="com.google.android.instantapps.samples.hellofeature"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="26" />

    <application
        android:debuggable="true"
        android:testOnly="true" >
        <meta-data
            android:name="asset_statements"
            android:resource="@string/asset_statements" />

        <activity
            android:name="com.instantappsamples.feature.bye.GoodbyeActivity"
            android:label="@string/title_activity_goodbye"
            android:splitName="bye"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="default-url"
                android:value="https://hello-feature.instantappsample.com/bye" />

            <intent-filter
                android:autoVerify="true"
                android:order="1" >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="hello-feature.instantappsample.com"
                    android:pathPrefix="/goodbye"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter android:order="1" >
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="hello-feature.instantappsample.com"
                    android:pathPrefix="/goodbye"
                    android:scheme="http" />
            </intent-filter>
        </activity>
    </application>

</manifest>